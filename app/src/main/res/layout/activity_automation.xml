<?xml version="1.0" encoding="utf-8"?>
<!--suppress ALL -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_surveillance"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context=".AutomationActivity">


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="53dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <Button
            android:text="RAYTHEON CHENNAI AT-3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rayChennai"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="rayChennaiClicked"/>

        <Button
            android:text="RAYTHEON MUMBAI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rayMumbai"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="rayMumbaiClicked"/>

        <Button
            android:text="SELEX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/selex"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="selexClicked"/>

        <Button
            android:text="INDRA KOLKATA"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/indraKolkata"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="indraKolkataClicked"/>


        <Button
            android:text="INDRA A/B1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/indraab1"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="indraab1Clicked"/>
        <Button
            android:text="INDRA DELHI"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/indraDelhi"
            android:layout_row="2"
            android:layout_column="1"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="indraDelhiClicked"/>


        <Button
            android:text="INDRA B2/C"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/indrab2c"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:onClick="indrab2cClicked"/>

    </GridLayout>

    <TextView
        android:text="Â© 2022-2023 Deepak Singh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Select Equipment to perform Maintenance."
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/textView3"
        android:textColor="@color/colorAccent"
        android:textStyle="normal|bold"
        android:textSize="18sp" />



</RelativeLayout>